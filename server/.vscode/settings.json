{
  // direnv拡張機能を有効化してNix devshell環境を自動ロード
  "direnv.restart.automatic": true,
  
  // Go拡張機能の設定
  "go.toolsManagement.autoUpdate": true,
  
  // Nix devshell環境でGoツールをインストール
  "go.toolsEnvVars": {},
  
  // エディタ設定
  "[go]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  
  // ファイル除外設定
  "files.exclude": {
    "**/.git": true,
    "**/tmp": true,
    "**/bin": true,
    "**/*.db": true
  },
  
  "files.watcherExclude": {
    "**/tmp/**": true,
    "**/bin/**": true,
    "**/vendor/**": true
  }
}

